{
  "manifest_version": 3,
  "name": "Aura AI Scribe",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon2.png",
    "48": "icons/icon3.png"
  },
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src *"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [
    "webRequest",
    "*://*.frontegg.com/*",
    "identity",
    "audioCapture"
  ]
}
